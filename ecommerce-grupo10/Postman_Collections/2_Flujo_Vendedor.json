{
    "info": {
        "name": "2do Flujo: Flujo Vendedor",
        "description": "Flujo completo de un vendedor desde registro hasta gestión de productos y órdenes",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "user_id",
            "value": "",
            "type": "string"
        },
        {
            "key": "producto_id",
            "value": "",
            "type": "string"
        },
        {
            "key": "categoria_id",
            "value": "",
            "type": "string"
        },
        {
            "key": "descuento_id",
            "value": "",
            "type": "string"
        },
        {
            "key": "imagen_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Registro de Usuario Vendedor",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "if (pm.response.code === 200 || pm.response.code === 201) {",
                            "    var jsonData = pm.response.json();",
                            "    pm.environment.set('user_id', jsonData.id);",
                            "    console.log('Vendedor registrado con ID: ' + jsonData.id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"vendedor@example.com\",\n  \"password\": \"Password123!\",\n  \"nombre\": \"María\",\n  \"apellido\": \"González\",\n  \"direccion\": \"Av. Santa Fe 2500\",\n  \"telefono\": \"11-5678-9012\",\n  \"rol\": \"VENDEDOR\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/auth/register",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "auth",
                        "register"
                    ]
                }
            },
            "response": []
        },
        {
